---
import Badge from "@/components/Badge.astro";
import LinkedInIcon from "@/components/icons/LinkedIn.astro";
import MailIcon from "@/components/icons/Mail.astro";
import SocialPill from "@/components/SocialPill.astro";
import { getLangFromUrl } from 'src/i18n/utils.ts';
import hero from 'src/texts/hero.json';

const lang = getLangFromUrl(Astro.url); // Obt√©n el idioma de la URL
const content = hero[lang].hero; // Accede al contenido del hero en el idioma correcto
---

<div class="max-w-xl">
  <div class="flex gap-4 mb-4">
    <img
      class="rounded-full shadow-lg size-16"
      src="/jpbd.webp"
      alt={content.personalImageAlt}
    />
    <a
      href={content.contact.linkedin.href}
      target="_blank"
      rel="noopener"
      class="flex items-center transition md:justify-center md:hover:scale-105"
    >
      <Badge>{content.badge}</Badge>
    </a>
  </div>
  <h1 class="text-4xl font-bold tracking-tight text-gray-800 sm:text-5xl dark:text-white">
    {content.title}
  </h1>
  <p
    class="mt-6 text-xl text-gray-800 dark:[&>strong]:text-yellow-200 [&>strong]:text-yellow-500 [&>strong]:font-semibold dark:text-gray-300"
    set:html={content.description}
  ></p>
  <nav class="flex flex-wrap gap-4 mt-8">
    <SocialPill href={content.contact.email.href}>
      <MailIcon class="size-4" />
      {content.contact.email.text}
    </SocialPill>
    <SocialPill href={content.contact.linkedin.href}>
      <LinkedInIcon class="size-4" />
      {content.contact.linkedin.text}
    </SocialPill>
  </nav>
</div>